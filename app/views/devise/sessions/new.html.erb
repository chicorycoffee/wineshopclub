<link href='https://fonts.googleapis.com/css2?family=Itim&display=swap' rel="stylesheet">
<div class='registration-main'>
<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
  <span><%= link_to 'WINE SHOP CLUB', root_path, class:'form-header-appname' %> </span><br>
    <span class='form-header-text'>
      ログイン
    </span>
  </div>

  <!--<%= render 'shared/error_messages', model: f.object %>-->
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="bold-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"form-control input-lg col-lg-5", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="bold-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"form-control input-lg col-lg-5"%>
  </div>
  <div class='register-btn'>
    <%= f.submit "ログイン" ,class: "btn btn-primary btn-lg" %>
  </div>
</div>
<% end %>
</div>


