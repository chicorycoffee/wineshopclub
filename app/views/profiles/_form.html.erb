  <%= form_with model: [user, profile], local: true do |f| %>

    <div class="bold-text">
      店名
    </div>
    <%= f.text_field :shop, class:"form-control input-lg col-lg-4", maxlength:"30" %>
    <div class="form-text">最大30文字。(例) ワインショップABC</div>

    <div class="bold-text">
      所在地
    </div>
    <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {prompt: false}, {class:"form-control input-lg col-lg-5"}) %>
    
    <div class="bold-text">
     主要顧客層
    </div>
    <%= f.collection_select(:customer_id, Customer.all, :id, :name, {prompt: false}, {class:"form-control input-lg col-lg-5"}) %>
  
    <div class="bold-text">
     注力価格帯
    </div>
    <%= f.collection_select(:price_id, Price.all, :id, :name, {prompt: false}, {class:"form-control input-lg col-lg-5"})%>
    
    <div class="bold-text">
      注力産地
    </div>
    <%= f.collection_select(:country_id, Country.all, :id, :name, {prompt: false}, {class:"form-control input-lg col-lg-5"})%>

    <div class="bold-text">
      紹介コメント
    </div>
    <%= f.text_area :introduction, maxlength:"140", class:"form-control input-lg col-lg-5" %>
    <div class="form-text">最大140文字。ワインショップについてコメントをお願いします</div>
    
    <div class="new-submit">
      <% if current_page?(new_user_profile_path)%>
        <input class="btn btn-primary btn-lg" type="submit" value="登録する">
      <% else %>
        <input class="btn btn-primary btn-lg" type="submit" value="変更を保存する">
      <% end %>
    </div>
  <% end %>