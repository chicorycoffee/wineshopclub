<%= render "shared/header"%>

<div class="category bg-success"><%= link_to "今売れてます", posts_index_hot_path %></div>
  <% @post1.each do |post| %>
    <div class="post-index-item mb-20">
      <% if post.image.attached? %>
        <%= image_tag post.image, class: "index-img" %>
      <% else %>
        <img class="index-img" src="<%= "/images/test_sample.png" %>" alt="Index image cap">
      <% end %>
      <%= link_to(post.title, post_path(post.id)) %>
    </div>
  <% end %>

